{% extends 'base.html.twig' %}

{% block title %}Liste des tâches{% endblock %}

{% block body %}
    <h1 class="py-5 text-center">Liste des tâches</h1>

    <div class="container">
        <div class="row d-flex justify-content-center">
    {% for task in tasks %}
                <div class="col-12 col-md-6 col-lg-4 card border-success mb-3 text-center mx-2" style="max-width: 25rem;">
                    <div class="card-header bg-transparent border-success">
                        Pour le : {{ task.createDate ? task.createDate|date('Y-m-d') : '' }}  
                       <div class="btn btn-sm btn-warning float-end">
                            {{ task.status }}
                       </div> 
                    </div>
                    <div class="card-body text-success">
                        <h5 class="card-title text-white">Tâche : {{task.name}}</h5>
                        <p class="card-text text-white">Crée le : {{ task.deadline ? task.deadline|date('Y-m-d') : '' }}</p>
                        <p class="card-text text-white">{{ task.description }}</p>
                    </div>
                    <div class="row card-footer bg-transparent border-success d-flex justify-content-center">
                        <div class="col-sm-4">
                            <a class="btn btn-sm btn-success" href="{{ path('task_edit', {'id': task.id}) }}">Modifier</a>
                        </div>
                        <div class="col-sm-4">
                            {{ include('task/_delete_form.html.twig') }}
                        </div>
                    </div>
                    <a class="btn btn-md btn-success my-1" href="{{ path('task_new', {'id': project.id}) }}">Nouvelle tâche</a>
                </div>
    {% endfor %}
    
{% endblock %}
